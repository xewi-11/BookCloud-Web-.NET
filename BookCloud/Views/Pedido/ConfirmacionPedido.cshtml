@model Pedido

@{
    ViewData["Title"] = "Confirmación de Pedido";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                <h1 class="mt-3">¡Compra Exitosa!</h1>
                <p class="text-muted">Tu pedido ha sido procesado correctamente</p>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-receipt"></i> Detalles del Pedido #@Model.Id
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Fecha:</strong><br />
                            @Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-md-6">
                            <strong>Estado:</strong><br />
                            <span class="badge bg-success">@Model.Estado</span>
                        </div>
                    </div>

                    <hr />

                    <h5 class="mb-3">Libros comprados:</h5>
                    @foreach (var detalle in Model.PedidoDetalles)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>@detalle.Libro.Titulo</strong><br />
                                <small class="text-muted">Cantidad: @detalle.Cantidad x $@detalle.PrecioUnitario.ToString("N2")</small>
                            </div>
                            <strong>$@((detalle.Cantidad * detalle.PrecioUnitario).ToString("N2"))</strong>
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <h4>Total:</h4>
                        <h4 class="text-gold">$@Model.Total.ToString("N2")</h4>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a asp-controller="Pedido" asp-action="MisPedidos" class="btn btn-primary">
                    <i class="bi bi-box-seam"></i> Ver Mis Pedidos
                </a>
                <a asp-controller="Libro" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-book"></i> Seguir Comprando
                </a>
            </div>
        </div>
    </div>
</div>