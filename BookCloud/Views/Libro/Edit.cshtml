@model BookCloud.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    <i class="bi bi-pencil-square" style="font-size: 2rem;"></i>
                    <h2 class="mb-0">Editar Libro</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="Id" />

                        <!-- Preview de imagen actual -->
                        <div class="text-center mb-4">
                            <img id="imagePreview" 
                                 src="~/imagenes/Libros/@Model.Foto" 
                                 alt="@Model.Titulo" 
                                 style="max-width: 100%; max-height: 300px; border-radius: 16px; border: 2px solid var(--dorado);" />
                        </div>

                        <div class="row g-3">
                            <!-- Foto del libro -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="bi bi-image"></i> Cambiar imagen del libro
                                </label>
                                <input type="file" 
                                       name="imagenFile" 
                                       class="form-control" 
                                       accept="image/*" 
                                       onchange="previewImage(event)" />
                                <small class="text-muted">Deja vacío si no deseas cambiar la imagen. Formatos: JPG, PNG, GIF. Tamaño máximo: 5MB</small>
                            </div>

                            <!-- Título -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-book-half"></i> Título
                                </label>
                                <input name="Titulo" value="@Model.Titulo" class="form-control" placeholder="Ingrese el título del libro" required />
                            </div>

                            <!-- Autor -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-person"></i> Autor
                                </label>
                                <input name="Autor" value="@Model.Autor" class="form-control" placeholder="Nombre del autor" required />
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="bi bi-text-paragraph"></i> Descripción
                                </label>
                                <textarea name="Descripcion" 
                                          class="form-control" 
                                          rows="4" 
                                          placeholder="Describe el libro..." 
                                          required>@Model.Descripcion</textarea>
                            </div>

                            <!-- Precio -->
                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="bi bi-cash-coin"></i> Precio
                                </label>
                                <input name="Precio" 
                                       type="number" 
                                       step="0.01" 
                                       value="@Model.Precio" 
                                       class="form-control" 
                                       placeholder="0.00" 
                                       required />
                            </div>

                            <!-- Stock -->
                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="bi bi-box-seam"></i> Stock
                                </label>
                                <input name="Stock" 
                                       type="number" 
                                       value="@Model.Stock" 
                                       class="form-control" 
                                       placeholder="0" 
                                       required />
                            </div>

                            <!-- Fecha de publicación -->
                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="bi bi-calendar-event"></i> Fecha de Publicación
                                </label>
                                <input name="FechaPublicacion" 
                                       type="date" 
                                       value="@Model.FechaPublicacion.ToString("yyyy-MM-dd")" 
                                       class="form-control" 
                                       required />
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Validar tamaño (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen es demasiado grande. Tamaño máximo: 5MB');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function () {
                    const output = document.getElementById('imagePreview');
                    output.src = reader.result;
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
}