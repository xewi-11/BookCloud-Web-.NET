@model BookCloud.Models.Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    <i class="bi bi-book" style="font-size: 2rem;"></i>
                    <h2 class="mb-0">Publicar Nuevo Libro</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Preview de imagen -->
                        <div class="text-center mb-4">
                            <img id="imagePreview" 
                                 src="/images/upload-placeholder.png" 
                                 alt="Preview" 
                                 style="max-width: 100%; max-height: 300px; border-radius: 16px; border: 2px solid var(--dorado); display: none;" />
                        </div>

                        <div class="row g-3">
                            <!-- Foto del libro -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="bi bi-image"></i> Imagen del libro
                                </label>
                                <input type="file" 
                                       name="imagenFile" 
                                       class="form-control" 
                                       accept="image/*" 
                                       onchange="previewImage(event)" 
                                       required />
                                <small class="text-muted">Formatos: JPG, PNG, GIF. Tamaño máximo: 5MB</small>
                            </div>

                            <!-- Título -->
                            <div class="col-md-6">
                                <label asp-for="Titulo" class="form-label">
                                    <i class="bi bi-book-half"></i> Título
                                </label>
                                <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del libro" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>

                            <!-- Autor -->
                            <div class="col-md-6">
                                <label asp-for="Autor" class="form-label">
                                    <i class="bi bi-person"></i> Autor
                                </label>
                                <input asp-for="Autor" class="form-control" placeholder="Nombre del autor" />
                                <span asp-validation-for="Autor" class="text-danger"></span>
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label">
                                    <i class="bi bi-text-paragraph"></i> Descripción
                                </label>
                                <textarea asp-for="Descripcion" 
                                          class="form-control" 
                                          rows="4" 
                                          placeholder="Describe el libro..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>

                            <!-- Precio -->
                            <div class="col-md-4">
                                <label asp-for="Precio" class="form-label">
                                    <i class="bi bi-cash-coin"></i> Precio
                                </label>
                                <input asp-for="Precio" 
                                       type="number" 
                                       step="0.01" 
                                       class="form-control" 
                                       placeholder="0.00" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-4">
                                <label asp-for="Stock" class="form-label">
                                    <i class="bi bi-box-seam"></i> Stock
                                </label>
                                <input asp-for="Stock" 
                                       type="number" 
                                       class="form-control" 
                                       placeholder="0" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>

                            <!-- Fecha de publicación -->
                            <div class="col-md-4">
                                <label asp-for="FechaPublicacion" class="form-label">
                                    <i class="bi bi-calendar-event"></i> Fecha de Publicación
                                </label>
                                <input asp-for="FechaPublicacion" 
                                       type="date" 
                                       class="form-control" />
                                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                            </div>

                            <!-- Activo -->
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           asp-for="Activo" 
                                           type="checkbox" 
                                           checked />
                                    <label class="form-check-label">
                                        <i class="bi bi-check-circle"></i> Libro activo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Publicar Libro
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Validar tamaño (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen es demasiado grande. Tamaño máximo: 5MB');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function () {
                    const output = document.getElementById('imagePreview');
                    output.src = reader.result;
                    output.style.display = "block";
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
}
