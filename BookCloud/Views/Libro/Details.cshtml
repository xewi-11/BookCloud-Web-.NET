@model Libro

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="details-container">
    <a asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver al catálogo
    </a>

    <div class="details-card">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="~/imagenes/Libros/@Model.Foto"
                     alt="@Model.Titulo" 
                     class="details-image" />
            </div>
            <div class="col-md-7">
                <div class="details-content">
                    <h1 class="details-title">@Model.Titulo</h1>
                    <p class="details-author">
                        <i class="bi bi-person-fill"></i> por @Model.Autor
                    </p>

                    <div class="divider"></div>

                    <p class="details-description">@Model.Descripcion</p>

                    <div class="details-info">
                        <div class="info-item">
                            <div class="info-label">
                                <i class="bi bi-cash-coin"></i> Precio
                            </div>
                            <div class="info-value">$@Model.Precio.ToString("N2")</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">
                                <i class="bi bi-box-seam"></i> Stock
                            </div>
                            <div class="info-value">@Model.Stock unidades</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">
                                <i class="bi bi-calendar-event"></i> Publicación
                            </div>
                            <div class="info-value" style="font-size: 1.1rem;">
                                @Model.FechaPublicacion.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        @if (Model.Stock > 0)
                        {
                            <form asp-controller="Carrito" asp-action="AgregarAlCarrito" method="post" class="flex-grow-1">
                                <input type="hidden" name="libroId" value="@Model.Id" />
                                <div class="input-group">
                                    <input type="number" 
                                           name="cantidad" 
                                           value="1" 
                                           min="1" 
                                           max="@Model.Stock" 
                                           class="form-control" 
                                           style="max-width: 80px;" />
                                    <button type="submit" class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-cart-plus"></i> Añadir al carrito
                                    </button>
                                </div>
                            </form>
                            <button class="btn btn-secondary">
                                <i class="bi bi-heart"></i>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-danger flex-grow-1" disabled>
                                <i class="bi bi-x-circle"></i> No disponible
                            </button>
                        }
                    </div>

                    @if (Model.UsuarioId.ToString() == Context.Session.GetString("Id"))
                    {
                        <div class="divider"></div>
                        <div class="d-flex gap-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary flex-grow-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
